<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID"
	version="2.5">
<display-name>Minibank</display-name>
    
    <session-config>
  	  <session-timeout>10</session-timeout>
    </session-config>
	
	<filter>
        <filter-name>struts-cleanup</filter-name>
        <filter-class>
            org.apache.struts2.dispatcher.ActionContextCleanUp
        </filter-class>
    </filter>  
    <filter-mapping>
        <filter-name>struts-cleanup</filter-name>
       <url-pattern>/*</url-pattern>
    </filter-mapping>
	
	
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter
			
		</filter-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>
			struts-default.xml,
			struts-plugin.xml,
			strutsContext/struts.xml
			</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
   
    <welcome-file-list>
        <welcome-file>/jsp/catalog.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Secure the application -->
<security-constraint>
    <web-resource-collection>
		<web-resource-name>com.ibm.cics.minibank.webapp</web-resource-name>
		<description>Protection area for com.ibm.cics.minibank.webapp</description>
		<url-pattern>/*</url-pattern>
	</web-resource-collection>
	<auth-constraint>
		<description>all authenticated user of that web app</description>
		<role-name>cicsAllAuthenticated</role-name>
	</auth-constraint>
	<user-data-constraint>
		<!-- Force the use of SSL -->
		<transport-guarantee>CONFIDENTIAL</transport-guarantee>
	</user-data-constraint>
</security-constraint>

<!-- Declare the roles referenced in this deployment descriptor -->
<security-role>
	<description>The CICS cicsAllAuthenticated role</description>
	<role-name>cicsAllAuthenticated</role-name>
</security-role>

<!--Determine the authentication method -->
<login-config>
		<auth-method>BASIC</auth-method>	
</login-config>
    
</web-app>
